{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist",
    "rootDir": "netlify",
    "typeRoots": ["./node_modules/@types"],
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["netlify/*"]
    }
  },
  "include": ["netlify/functions/**/*", "netlify/types/**/*"],
  "exclude": ["node_modules", "dist"]
}
